<h1>Listing models</h1>

<%= link_to 'New Model', new_model_path %><br><br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= model.brand.name %></td>
        <td><%= image_tag model.brand.symbol_url(:thumb) %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_model_path(model) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

